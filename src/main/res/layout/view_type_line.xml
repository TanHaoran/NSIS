<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bottommain_layoutWidth"
    android:layout_height="@dimen/type_line_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_type_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="match_parent">

            <com.jerry.nsis.view.TriangleArrow
                android:id="@+id/tarrow"
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bottom_type"
            android:layout_width="@dimen/bottommain_item_type_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="clip_horizontal"
            android:text="今 日 入 院"
            android:textColor="#0033cb"
            android:textSize="@dimen/slide_menu_textSize" />


        <com.jerry.nsis.view.SmallBed
            android:id="@+id/bed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <com.jerry.nsis.view.SmallBed
            android:id="@+id/bed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <com.jerry.nsis.view.SmallBed
            android:id="@+id/bed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <com.jerry.nsis.view.SmallBed
            android:id="@+id/bed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <com.jerry.nsis.view.SmallBed
            android:id="@+id/bed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_paging"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_paging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paging" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_paging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="#333333"
            android:textSize="@dimen/bed_paging_textSize" />

    </RelativeLayout>


</LinearLayout>