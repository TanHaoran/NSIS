<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎您使用"
            android:textColor="@color/exchangebed_textColor"
            android:textSize="@dimen/welcome_normal_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" NSIS "
            android:textColor="@color/setting_title"
            android:textSize="@dimen/welcome_nsis_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统，请点击"
            android:textColor="@color/exchangebed_textColor"
            android:textSize="@dimen/welcome_normal_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 继续 "
            android:textColor="@color/setting_btn"
            android:textSize="@dimen/welcome_normal_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行注册"
            android:textColor="@color/exchangebed_textColor"
            android:textSize="@dimen/welcome_normal_textSize" />
    </LinearLayout>


</RelativeLayout>
