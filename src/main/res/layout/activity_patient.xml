<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#1abb9b"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/people" />

            <TextView
                android:id="@+id/tv_col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="床号："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="住院号："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_hosid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="入院日期："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_intime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b8cce1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="诊断："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="护理等级："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="主治医生："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b8cce1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="医保类型："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="预缴款："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="总花费："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="余额："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patient_left_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_left_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="联系方式："
                    android:textColor="@color/patient_left"
                    android:textSize="@dimen/patient_info_textSize" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/patient_info_textSize" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b8cce1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="今日提示"
            android:textColor="#fd8e00"
            android:textSize="@dimen/patient_info_textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_long"
                android:layout_width="@dimen/patient_left_btn_width"
                android:layout_height="@dimen/patient_left_btn_height"
                android:background="#1abb9b"
                android:gravity="center"
                android:text="长期医嘱"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="@dimen/patient_left_btn_width"
                android:layout_height="@dimen/patient_left_btn_height"
                android:layout_marginLeft="20dp"
                android:background="#8b8b8b"
                android:gravity="center"
                android:text="临时医嘱"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/four_square" />

                <TextView
                    android:id="@+id/tv_ordertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv"
                    android:text="长期医嘱"
                    android:textColor="#1c2b36"
                    android:textSize="@dimen/my_work_name_textSize" />

                <TextView
                    android:id="@+id/abandon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="作废"
                    android:textColor="#535a60"
                    android:textSize="10sp" />

                <View
                    android:id="@+id/v_abandon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/abandon"
                    android:background="@drawable/circle_red" />


                <TextView
                    android:id="@+id/tv_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/v_abandon"
                    android:text="停止"
                    android:textColor="#535a60"
                    android:textSize="10sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/tv_stop"
                    android:background="@drawable/circle_orange" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="#e1e6ea"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/patient_state"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_start"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_type"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="医嘱分类"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="医嘱内容"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_way"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="用药方式"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_frequency"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="执行频率"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_dose"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="一次剂量"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_note"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="嘱托"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />

                <TextView
                    android:layout_width="@dimen/patient_date"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="日期"
                    android:textColor="@color/patient_list_title_text"
                    android:textSize="@dimen/patient_list_title_textSize" />


            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_order_border"
                android:divider="@color/white"
                android:dividerHeight="1dp"
                android:padding="1dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/hs_del" />
    </RelativeLayout>


</LinearLayout>
